<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" x:Name="TBS"  x:Class="TBS.MainWindow"
        Title="TonyBet Statistics" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" 
        ContentRendered="TBS_ContentRendered">
    <DockPanel>
        <Ribbon Name="Ribbon" DockPanel.Dock="Top">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu Label="Wat?">
                    <RibbonApplicationMenu.AuxiliaryPaneContent>
                        AuxiliaryPaneContent
                    </RibbonApplicationMenu.AuxiliaryPaneContent>
                    <RibbonApplicationMenu.FooterPaneContent>
                        FooterPaneContent
                    </RibbonApplicationMenu.FooterPaneContent>
                    <RibbonApplicationMenuItem Header="Exit" Name="Exit" Click="Exit_Click"/>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab Header="Settings">
                <RibbonGroup Margin="0,1" Width="184" Header="Poll Options">
                    <StackPanel>
                        <RibbonComboBox Name="PollSpeed" Label="Poll Speed In Ms" Width="Auto"></RibbonComboBox>
                        <RibbonButton Name="Test" Label="Wat?" Background="Red" Click="Test_Click" />
                    </StackPanel>
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <Grid DockPanel.Dock="Left" Height="Auto" Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <StatusBar Name="StatusBar" Grid.Row="1">
                <StatusBarItem HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <StatusBarItem Name="StatusState" Content="Next Poll:" />
                        <StatusBarItem>
                            <ProgressBar Name="Progress" Minimum="0" Maximum="100" Width="250"  Height="10" HorizontalAlignment="Right"  Value="{Binding PercentTest}" />
                        </StatusBarItem>
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>
            <Grid Grid.Row="0" Height="Auto" Width="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="75*" />
                    <ColumnDefinition Width="25*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" />
                <ListBox Grid.Column="1" Height="Auto" Width="Auto" ItemsSource="{Binding RollList}" />
                <Grid Grid.Column="0">
                    
                </Grid>
            </Grid>
            
